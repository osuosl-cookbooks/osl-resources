# mongodb config file written by Chef
net:
  port: "<%= @port %>"
  bindIp: "<%= @bind_ip %>"
  maxIncomingConnections: <%= @max_connections %>
processManagement:  
  pidFilePath: "/var/run/mongodb/mongod.pid"
storage:
  dbPath: "<%= @data_dir %>"
systemLog:
  destination: "<%= @log_dest %>"
<% if not @log_path.nil? -%>
  path: "<%= @log_path %>"
<% end -%>
