# mongodb config file written by Chef
net:
  port: <%= @port %>
  bindIp: <%= @bind_ip %>
  maxIncomingConnections: <%= @max_connections %>
processManagement:
  fork: true
  pidFilePath: /var/run/mongodb/mongod.pid
  timeZoneInfo: /usr/share/zoneinfo
storage:
  dbPath: <%= @data_dir %>
  journal:
    enabled: true
systemLog:
  destination: <%= @log_dest %>
  logAppend: true
  path: <%= @log_path %>
