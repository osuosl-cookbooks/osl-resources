# This file was generated by Chef Infra
# Do NOT modify this file by hand.

bots:
<% @import_bots.each do |b| -%>
  - import: <%= b %>
<% end -%>
<% if @custom_bots -%>

  # Custom bots
<%= YAML.dump(@custom_bots).sub(/\A---\s*\n/, '').rstrip.gsub(/^/, '  ') %>
<% end -%>

  # Generic catchall rule
  - name: generic-browser
    user_agent_regex: >-
      Mozilla|Opera
    action: WEIGH
    weight:
      adjust: 10

thresholds:
  - name: default-challenge
    expression: weight > 0
    action: CHALLENGE
    challenge:
      algorithm: <%= @default_challenge['algorithm'] %>
      difficulty: <%= @default_challenge['difficulty'] %>

dnsbl: false
<% if @extra_config -%>

# Extra config
<%= YAML.dump(@extra_config).sub(/\A---\s*\n/, '').rstrip %>
<% end -%>
