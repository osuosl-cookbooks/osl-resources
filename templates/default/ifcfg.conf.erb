# ifcfg config file written by Chef
<% if @bcast -%>
BROADCAST=<%= @bcast %>
<% end -%>
<% if @bonding_opts -%>
BONDING_OPTS="<%= @bonding_opts %>"
<% end -%>
<% if @bootproto -%>
BOOTPROTO=<%= @bootproto %>
<% end -%>
<% if @bridge -%>
BRIDGE=<%= @bridge %>
<% end -%>
<% if @defroute -%>
DEFROUTE=<%= @defroute %>
<% end -%>
<% if @delay -%>
DELAY=<%= @delay %>
<% end -%>
<% if @device -%>
DEVICE=<%= @device %>
<% end -%>
<% if @ethtool_opts -%>
ETHTOOL_OPTS="<%= @ethtool_opts %>"
<% end -%>
<% if @gateway -%>
GATEWAY=<%= @gateway %>
<% end -%>
<% if @hwaddr -%>
HWADDR=<%= @hwaddr %>
<% end -%>
<% if @ipv6addr -%>
IPV6ADDR=<%= @ipv6addr[0] %>
<% end -%>
<% if @ipv6addrsec -%>
IPV6ADDR_SECONDARIES='<%= @ipv6addrsec.join(' ') %>'
<% end -%>
<% if @ipv6_defaultgw -%>
IPV6_DEFAULTGW=<%= @ipv6_defaultgw %>
<% end -%>
<% if @ipv6init -%>
IPV6INIT=<%= @ipv6init %>
<% end -%>
<% if @ipv6_autoconf -%>
IPV6_AUTOCONF=<%= @ipv6_autoconf %>
<% end -%>
<% unless @mask.empty? -%>
<% @mask.each_with_index do |mask, idx| -%>
<% if idx == 0 -%>
NETMASK=<%= mask %>
<% else -%>
NETMASK<%= idx %>=<%= mask %>
<% end -%>
<% end -%>
<% end -%>
<% if @master -%>
MASTER=<%= @master %>
<% end -%>
<% if @metric -%>
METRIC=<%= @metric %>
<% end -%>
<% if @mtu -%>
MTU=<%= @mtu %>
<% end -%>
<% if @network -%>
NETWORK=<%= @network %>
<% end -%>
<% if @nm_controlled -%>
NM_CONTROLLED=<%= @nm_controlled %>
<% end -%>
<% if @onboot -%>
ONBOOT=<%= @onboot %>
<% end -%>
<% if @onparent -%>
ONPARENT=<%= @onparent %>
<% end -%>
<% if @peerdns -%>
PEERDNS=<%= @peerdns %>
<% end -%>
<% if @slave -%>
SLAVE=<%= @slave %>
<% end -%>
<% unless @ipv4addr.empty? -%>
<% @ipv4addr.each_with_index do |ip, idx| -%>
<% if idx == 0 -%>
IPADDR=<%= ip %>
<% else -%>
IPADDR<%= idx %>=<%= ip %>
<% end -%>
<% end -%>
<% end -%>
<% if @type -%>
TYPE=<%= @type %>
<% end -%>
<% if @userctl -%>
USERCTL=<%= @userctl %>
<% end -%>
<% if @vlan -%>
VLAN=<%= @vlan %>
<% end -%>
